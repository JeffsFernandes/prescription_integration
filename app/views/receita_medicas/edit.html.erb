<h2>Editar receita</h2>
<%= form_for @receita_medica, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label "MÃ©dico", :class => 'control-label' %>
      <div class="controls">
        <%= select(:receita_medica, :medico_id, User.Medicos.all.map{|u| [u.crm, u.id]})%>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :paciente_id, :class => 'control-label' %>
      <div class="controls">
				<%= select(:receita_medica, :paciente_id, User.Pacientes.all.map{|u| [u.cpf, u.id]})%>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :historico_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :historico_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :farmacia_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :farmacia_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :data_prescricao, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :data_prescricao, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :status_id, :class => 'control-label' %>
      <div class="controls">
				<%= select(:receita_medica, :status_id, Status.all.map{|u| [u.nome, u.id]})%>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', receita_medicas_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


