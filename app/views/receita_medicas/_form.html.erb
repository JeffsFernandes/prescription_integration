<%= form_for(@receita_medica) do |f| %>
  <% if @receita_medica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@receita_medica.errors.count, "error") %> prohibited this receita_medica from being saved:</h2>
      <ul>
      <% @receita_medica.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>Médico</p>
		<%= select(:receita_medica, :medico_id, Medico.all.map{|u| [u.crm, u.id]})%>
  </div>
  <div class="field">
    <p>Paciente</p>
		<%= select(:receita_medica, :paciente_id, Paciente.all.map{|u| [u.nome, u.id]})%>
  </div>
  <div class="field">
    <% if @medicamentos %>
      <p>Medicamentos</p>
      <ul>
        <% @medicamentos.each do |m| %>
            <li><%= check_box_tag "receita_medica[medicamento_ids][]", m.id %> <%= m.nome %></li>
        <% end %>
      </ul>
    <% else %>
      <h3>Ainda não existem Medicamentos cadastrados</h3>
    <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
