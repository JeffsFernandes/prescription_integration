<%= form_for @medicamento, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Medicamento</legend>

    <div class="control-group">
      <%= f.label :nome, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :nome, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :principio_ativo, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :principio_ativo, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Atualizar", :class => 'btn btn-primary' %>
      <%= link_to 'Cancelar', medicamentos_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
