<h2>Cadastro</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :tipo, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :tipo, User::TIPO, {:prompt => ""}, {:class =>'tipo'} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :nome , :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome %>
    </div>
  </div>

  <div class = "tipo_paciente">
    <div class="control-group">
      <%= f.label :cpf, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :cpf %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :data_nascimento, :class => 'control-label'%>
      <div class="controls">
        <%= f.date_select :data_nascimento %>
      </div>
    </div>
  </div>

  <div class = "tipo_medico">
    <div class="control-group">
      <%= f.label :cpf, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :cpf %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :data_nascimento, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :data_nascimento %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :crm, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :crm %>
      </div>
    </div>
  </div>

  <div class = "tipo_farmacia">
    <div class="control-group">
      <%= f.label :cnpj, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :cnpj %>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :telefone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefone %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :sexo, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :sexo, User::SEXO, {:prompt => ""}, {:class =>'sexo'} %>
    </div>
  </div>

  <fieldset class = "endereco">
     <div class="control-group">
          <%= f.label :rua, :class => 'control-label' %>
          <%= f.text_field :rua %>
      </div>
      <div class="control-group">
        <%= f.label :numero, :class => 'control-label' %>
        <%= f.text_field :numero %>
      </div>
      <div class="control-group">
        <%= f.label :complemento, :class => 'control-label' %>
        <%= f.text_field :complemento %>
      </div>
      <div class="control-group">
        <%= f.label :bairro, :class => 'control-label' %>
        <%= f.text_field :bairro %>
      </div>
      <div class="control-group">
        <%= f.label :cidade, :class => 'control-label' %>
        <%= f.text_field :cidade %>
      </div>
      <div class="control-group">
        <%= f.label :estado, :class => 'control-label' %>
        <%= f.text_field :estado %>
      </div>
      <div class="control-group">
        <%= f.label :cep, :class => 'control-label' %>
        <%= f.text_field :cep %>
      </div>
  </fieldset>
  <div><%= f.submit "Cadastrar" %></div>
<% end %>


<%= render :partial => "devise/shared/links" %>
